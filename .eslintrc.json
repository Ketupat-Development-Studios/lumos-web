{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "rules": {
        "semi": [1, "never"],
        "react/display-name": 0
    }
}
